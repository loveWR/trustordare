/**index.wxss**/

page {
  background-color: #fff;
}

.showcase {
  flex-direction: column;
  width: 100%;
  height: 500rpx;
  background-color: #fcf8e3;
  color: #8a6d3b;
  font-family: "Microsoft Yahei";
}

.question {
  display: flex;
  height: 100%;
  text-align: center;
  vertical-align: middle;
  font-size: 22px;
  justify-content: center;
  align-items: center;
}

.location {
  float: right;
  font-size: 14px;
  color: #8a6d3b;
  font-family: "Microsoft Yahei";
}

.btn-left {
  margin-right: 5px;
}

.btn-right {
  margin-left: 5px;
}

.btn-submit[size=mini] {
  display: initial;
  padding: 6px 0;
  font-size: 14px;
  margin: 0;
  background: transparent;
}

.btn-submit::after {
  border: none;
}

.btn-sort {
  float: right;
  font-size: 14px;
  padding: 4px 0;
}
.minibtn{width:30%; margin:0;border: solid 0em}
.about{
  display: block;
  position: relative;
  left: 48%;
  bottom: 10px  
}

.guanzhu{
  width: 100px
}
